<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cmdRoot" minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane prefHeight="339.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <TextArea fx:id="tfLog" editable="false" prefHeight="363.0" prefWidth="600.0" promptText="Log will apear hear" style="-fx-padding: 2;" stylesheets="@../style/style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="59.0" prefWidth="231.0" style="-fx-padding: 10px;" stylesheets="@../style/style.css" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" style="-fx-text-fill: white;" styleClass="cmd-button" text="Save">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnNew" mnemonicParsing="false" style="-fx-text-fill: white;" styleClass="cmd-button" text="New">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnRelaunch" layoutX="30.0" layoutY="20.0" mnemonicParsing="false" style="-fx-text-fill: white;" styleClass="cmd-button" text="Relaunch">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
            </HBox>
         </children>
      </AnchorPane>
      <HBox prefHeight="40.0" prefWidth="200.0" style="-fx-padding: 10px;" stylesheets="@../style/style.css">
         <children>
            <TextField fx:id="tfInputCmd" prefHeight="36.0" prefWidth="149.0" promptText="Input command..." style="-fx-text-fill: white;" stylesheets="@../style/style.css" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="btnSend" mnemonicParsing="false" style="-fx-text-fill: white;" styleClass="cmd-button" text="Send" />
         </children>
      </HBox>
   </children>
</VBox>
