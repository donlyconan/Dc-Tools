<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane hgap="5.0" prefWidth="400.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="195.0" minWidth="10.0" prefWidth="85.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="412.0" minWidth="10.0" prefWidth="384.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="132.0" minHeight="22.0" prefHeight="29.0" />
            <RowConstraints maxHeight="190.0" minHeight="10.0" prefHeight="111.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="190.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Commands" GridPane.rowIndex="1">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></Text>
            <TextField fx:id="txtCommandName" prefHeight="25.0" promptText="Filename..." GridPane.columnIndex="1">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></TextField>
            <Text layoutX="15.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></Text>
            <TextArea fx:id="txtCommands" layoutX="123.0" layoutY="47.0" prefHeight="200.0" prefWidth="200.0" promptText="Let's compose command here..." GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></TextArea>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Modified" GridPane.rowIndex="2">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></Text>
            <Label fx:id="txtModified" text="10/09/2020 10:00 AM" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </GridPane>
   </center>
   <top>
      <Label fx:id="lbTitle" alignment="CENTER" prefHeight="35.0" prefWidth="542.0" text="COMPOSE COMMAND" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
         <padding>
            <Insets left="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCancel" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handle" prefHeight="30.0" prefWidth="75.0" text="Cancel">
               <font>
                  <Font name="Arial" size="12.0" />
               </font></Button>
            <Button fx:id="btnOk" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handle" prefHeight="30.0" prefWidth="75.0" text="Ok">
               <font>
                  <Font name="Arial" size="12.0" />
               </font></Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
